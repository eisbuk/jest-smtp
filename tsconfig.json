{
    "compilerOptions": {
        "target": "ES2015",                       
        "module": "commonjs",                     
        "outDir": "dist",                        
        "rootDir": "src",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
    },
    "exclude": [
        "node_modules",
        "test",
        "./*.js",
        "dist/**/*"
    ],
    "include": [
        "src/**/*.ts",
        "typings/**/*"
    ]
}